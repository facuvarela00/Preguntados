<main>
    <article>
        <form action="/homeAdmin/filtrarGraficos" class="containerRegistro" method="post">
            <select name="filtro" id="filtro">
                <option value="todo">Todos los Tiempos</option>
                <option value="año">Ultimo Año</option>
                <option value="mes">Ultimo Mes</option>
                <option value="semana">Ultima Semana</option>
                <option value="dia">Ultimo Día</option>
            </select>
            <input type="hidden" value="1" name="ejecutadaDesde">
            <input type="submit" value="Filtrar">
        </form>
    </article>
    <div style="display: flex; justify-content: center; align-items: center; flex-direction: column;>
    <p style="text-align:center;"><strong>Usuarios</strong></p>
    <img src="/public/graficos/{{graficoCantidadUsuariosPorGenero}}" alt="Usuarios por Genero">
    <img src="/public/graficos/{{graficoCantidadUsuariosPorGrupoEdad}}" alt="Usuarios por Grupo Edad">
    <img src="/public/graficos/{{graficoCantidadUsuariosPorPais}}" alt="Usuarios por Pais">
    </div>
<div style="display: flex; justify-content: center; align-items: center; width: 100%; margin: auto;">
    <div id="scrollable-box" style="height: 300px; overflow-y: scroll; width: 80%;">
        {{#usuarios}}
        <form action="usuarios" method="POST">
            <input type="submit" class="opcionesHome4" data-correo="{{.}}" name="correo" value="{{.}}">
        </form>
        {{/usuarios}}
    </div>
</div>
<div class="acertadas">
    <img src="/public/graficos/{{graficoPorcentajeAcertadasPorUsuario}}" alt="Porcentaje Acertadas por Usuario">
</div>
    <div style="display: flex; align-items: center; justify-content: center; flex-direction: column;">
    <p><strong>Usuarios Nuevos</strong></p>
    <div id="scrollable-box" style="height: 400px; overflow-y: scroll;width: 600px; align-self: center;background-color: white; border: solid 1px black">
        <table>
            <thead>
            <tr>
                <th>ID Usuario</th>
                <th>Correo</th>
            </tr>
            </thead>
            <tbody>
            {{#usuariosNuevos}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{mail}}</td>
                </tr>
            {{/usuariosNuevos}}
            </tbody>
        </table>
    </div>
    </div>
    <article>
        <form action="/homeAdmin/generarPDF" method="post">
            <input type="hidden" name="ejecutadoDesde" value="1">
            <button type="submit" class="opcionesHome4">Generar PDF</button>
        </form>
        <br>
    </article>
</main>
